<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="RestauantAPP.View.CNDetailPage">
     <StackLayout Orientation="Vertical" BackgroundColor="Green" Spacing="0" Padding="10,2,0,0">
        <StackLayout Padding="8,5,0,0">
            <Label Text="{Binding CN.ResName, StringFormat='ResName : {0:N}'}" TextColor="Yellow" Font="22" VerticalOptions="StartAndExpand"></Label>
            <Label Text="{Binding CN.Address, StringFormat='Address : {0:N}'}" TextColor="Yellow" Font="22" VerticalOptions="StartAndExpand"></Label>
            <Label Text="{Binding CN.PNumber, StringFormat='PNumber : {0:N}'}" TextColor="Yellow" Font="22" VerticalOptions="StartAndExpand"></Label>
            <Label Text="{Binding CN.OHours, StringFormat='OHours : {0:N}'}" TextColor="Maroon" Font="22" VerticalOptions="StartAndExpand"></Label>
             <Label Text="{Binding CN.Price, StringFormat='Price : {0:N}'}" TextColor="Maroon" Font="22" VerticalOptions="StartAndExpand"></Label>
        </StackLayout>
    </StackLayout>
</ContentPage>
